{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "images/*": ["public/images/*"],
      "src/*": ["./src/*"],
      "actions/*": ["./src/redux/actions*"]
    },
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "lib": ["dom", "dom.iterable"],
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.tsx", "__tests__/helpers.js"],
  "exclude": [
    "__tests__",
    "__mocks__",
    "node_modules",
    "**/*.js",
    "**/*.jsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
